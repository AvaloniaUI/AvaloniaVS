<UserControl x:Class="PerspexVS.PerspexEditorMargin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PerspexVS"
             xmlns:designer="clr-namespace:Perspex.Designer;assembly=Perspex.Designer"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel LastChildFill="True">
        <Thumb DockPanel.Dock="Bottom" Cursor="SizeNS" DragDelta="OnResizeDrag" Height="3">
            
        </Thumb>
        <ContentControl x:Name="DesignerContainer" Background="Red"/>
    </DockPanel>
</UserControl>
