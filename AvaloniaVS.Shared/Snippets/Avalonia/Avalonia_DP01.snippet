<?xml version="1.0" encoding="utf-8" ?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
    <CodeSnippet Format="1.0.0">
        <Header>
            <SnippetTypes>
                <SnippetType>Expansion</SnippetType>
            </SnippetTypes>
            <Title>02 -- readonly DirectProperty</Title>
            <Shortcut>directProperty</Shortcut>
            <Description>Define read only DirectProperty.</Description>
            <Author>Avalonia Team</Author>
        </Header>
        <Snippet>
            <Declarations>
                <Literal>
                    <ID>property</ID>
                    <ToolTip>Property Name</ToolTip>
                    <Default>IsCapable</Default>
                </Literal>
                <Literal>
                    <ID>type</ID>
                    <ToolTip>Property Type</ToolTip>
                    <Default>bool</Default>
                </Literal>
                <Literal>
                    <ID>ownerclass</ID>
                    <ToolTip>The owning class of this property (which is typically the class in which it is declared).</ToolTip>
                    <Default>ownerclass</Default>
                    <Function>ClassName()</Function>
                </Literal>
                <Literal>
                    <ID>defaultvalue</ID>
                    <ToolTip>The default value for this property.</ToolTip>
                    <Default>default</Default>
                </Literal>
                <Literal Editable="true">
                    <ID>desc</ID>
                    <ToolTip>A description for the property.</ToolTip>
                    <Default>...</Default>
                    <Function></Function>
                </Literal>
            </Declarations>
            <Code Language="csharp">
                <![CDATA[
        /// <summary>
        /// $property$ DirectProperty definition
        /// </summary>
                public static readonly DirectProperty<$ownerclass$, $type$> $property$Property =
                    AvaloniaProperty.RegisterDirect<$ownerclass$, $type$>(nameof($property$),
                        o => o.$property$);


        private $type$ _$property$ = $defaultvalue$;
        /// <summary>
        /// Gets or sets the $property$ property. This DirectProperty 
        /// indicates $desc$.
        /// </summary>
        public $type$ $property$
        {
            get => _$property$;
            private set => SetAndRaise($property$Property, ref _$property$, value);
        }

        $end$]]>
            </Code>
            <Imports>
                <Import>
                    <Namespace>Avalonia</Namespace>
                </Import>
            </Imports>
        </Snippet>
    </CodeSnippet>
</CodeSnippets>
